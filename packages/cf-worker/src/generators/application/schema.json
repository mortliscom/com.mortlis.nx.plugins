{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Application",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "template": {
      "description": "The template to be used.",
      "type": "string",
      "default": "fetch-handler",
      "alias": "s",
      "x-prompt": {
        "message": "Which template would you like to use?",
        "type": "list",
        "items": [
          { "value": "none", "label": "Empty worker file." },
          {
            "value": "fetch-handler",
            "label": "Preconfigured worker as a fetch-handler."
          },
          {
            "value": "scheduled-handler",
            "label": "Preconfigured worker as a scheduled-handler."
          }
        ]
      }
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name"]
}
